<div class="container">
<h1> Advanced Search</h1>

<%= form_for @search do |f| %>
    <div class="field">
        <%= f.label :keywords %><br />
        <%= f.text_field :keywords %>
    </div>
    <div class="field">
        <%= f.label :genre_id %><br />
        <%= f.collection_select :genre_id, Genre.order(:title), :id, :title, include_blank: true %>
    </div>
    <div class="field">
        <%= f.label :studio_id %><br />
        <%= f.collection_select :studio_id, Studio.order(:title), :id, :title, include_blank: true %>
    </div>    
    <div class="field">
        <%= f.label :min_audience_score, "Audience score range" %><br />
        <%= f.text_field :min_audience_score, size: 10 %> - 
        <%= f.text_field :max_audience_score, size: 10 %>
    </div>
    <div class="field">
        <%= f.label :min_rt_score, "Rotten Tomatoes score range" %><br />
        <%= f.text_field :min_rt_score, size: 10 %> - 
        <%= f.text_field :max_rt_score, size: 10 %>
    </div>    
    <div class="field">
        <%= f.label :min_profitability, "Profitability range" %><br />
        <%= f.text_field :min_profitability, size: 10 %> - 
        <%= f.text_field :max_profitability, size: 10 %>
    </div>    
    <div class="field">
        <%= f.label :min_gross, "Gross range" %><br />
        <%= f.text_field :min_gross, size: 10 %> - 
        <%= f.text_field :max_gross, size: 10 %>
    </div>   
    <div class="field">
        <%= f.label :min_year, "Year range" %><br />
        <%= f.text_field :min_year, size: 10 %> - 
        <%= f.text_field :max_year, size: 10 %>
    </div>    
    <div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div>